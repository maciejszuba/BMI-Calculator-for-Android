<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/palm_background"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/skeleton_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/spooky_skeleton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="140dp"
            android:scaleType="fitXY"
            android:scaleX="1"
            android:src="@drawable/fullskeletontransparentimage2" />


        <ImageView
            android:id="@+id/spooky_skeleton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="140dp"
            android:scaleType="fitXY"
            android:scaleX="-1"
            android:src="@drawable/fullskeletontransparentimage2" />

    </LinearLayout>

    <TextView
        android:id="@+id/display"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:background="@color/selectedColor"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/normalColor"
        android:textSize="28sp"
        tools:text="BMI: 22.8\nIII st. otyłości" />

    <TextView
        android:id="@+id/weight_seekbar_value_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/give_weight"
        android:textAlignment="center"
        android:textColor="@color/normalColor"
        android:textColorHint="@color/normalColor"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/weight_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/weight_seekbar_tens"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_weight="2"
            android:max="20" />

        <SeekBar
            android:id="@+id/weight_seekbar_units"
            android:layout_width="130dp"
            android:layout_height="26dp"
            android:max="9" />

    </LinearLayout>

    <TextView
        android:id="@+id/height_seekbar_value_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/give_height"
        android:textAlignment="center"
        android:textColor="@color/normalColor"
        android:textColorHint="@color/normalColor"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/height_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/height_seekbar_tens"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_weight="2"
            android:max="20" />

        <SeekBar
            android:id="@+id/height_seekbar_units"
            android:layout_width="130dp"
            android:layout_height="26dp"
            android:max="9" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="-1"
        android:background="@drawable/calculate_white"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:src="@drawable/calculate_white" />


</LinearLayout>

